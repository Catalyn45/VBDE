#!/bin/bash

if [[ $# -lt 1 ]]; then
    echo "usage: $(basename $0) file1 [file2 filen]"
    exit 1
fi

files_paths=""
for file_name in $@; do
    file_path="file://$(realpath $file_name)"
    files_paths="$files_paths$file_path\n"
done

echo -e $files_paths | xclip -i -selection clipboard -t text/uri-list
